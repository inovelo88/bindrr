<h1>Leads</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Update Client</th>
            <th scope="col">ID</th>
            <th scope="col">Last Name</th>
            <th scope="col">First Name</th>
            <th scope="col">Gender</th>
            <th scope="col">Phone</th>
            <th scope="col">Email</th>
            <th scope="col">Last Follow Up</th>
            <th scope="col">Agent</th>

        </tr>
    </thead>
    <tbody>
            {{#each clients}}
            {{!-- {{#if wants_follow_up}} --}}

        <tr>
            <th>
                <button data-id="{{id}}" class="update-client">Update</button>
            </th>
            <th scope="row">{{id}}</th>
            <td>{{last_name}}</td>
            <td>{{first_name}}</td>
            <td>{{gender}}</td>
            <td>{{phone}}</td>
            <td>{{email}}</td>
            <td>{{last_follow_up}}</td>
            {{!-- //need to reference agent name // --}}
            <td>{{AgentId}}</td>
        </tr>
         {{!-- {{/if}} --}}
         {{/each}}
    </tbody>
</table>

<script type="text/javascript">

$(".update-client").on("click", function(event) {
    const id = $(this).data("id");
    window.location.replace(`/clients/${id}`);
});
</script>

